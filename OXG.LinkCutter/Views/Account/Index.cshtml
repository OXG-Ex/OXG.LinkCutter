@model IEnumerable<OXG.LinkCutter.Models.Link>
@{
    ViewData["Title"] = User.Identity.Name;
}

<div class="card border-info">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Сокращенная ссылка</th>
                <th scope="col">Оригинальная ссылка</th>
                <th scope="col">Пользователь</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@(Environment.GetEnvironmentVariable("BaseURL"))/Redirect/Rdrc/@item.CuttedLink</td>
                <td>@item.OriginalLink</td>
                <td>@item.User.Email</td>
                <td><a asp-action="RemoveLink" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>